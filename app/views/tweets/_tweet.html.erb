<div class="media hr top">
  <div class="media-left">
    <%= link_to image_tag("/images/#{@tweet.user.id}.jpg", class: "media-object"), @tweet.user %>
  </div>

  <div class="media-body">
    <h4 class="media-heading">
      @<%= link_to @tweet.user.name, @tweet.user%>
    </h4>
      <%= link_to @tweet.body, @tweet %>
  </div>
</div>
